
@{
    ViewBag.Title = "Index";
}

<br />

<div class="container-fluid">
    <div class="col-md-12" id="caption">
        <p class="pull-left">Herzlich Willkommen auf dem Azubi-Informations-System (AIS) des BBW Dresden</p>
    </div>   
</div>

<div class="container-fluid">

    <br />
    <br /> 

    <div class="row" id="SpeiseCarousel">

        <div class="col-md-6">

            <div class="col-md-12">
                <p style="font-size:21px">Letzte Änderungen:</p>

                @using System.Data.SqlClient;
                @using WebMatrix.Data;

                @{
                    var db = Database.Open("SQLServerConnectionString");
                    string selectQueryString = "SELECT Time, Title, 'aerztlicherDienst' AS 'table' FROM aerztlicherDienst " +
                        "UNION " +
                        "SELECT Time, Title, 'Aktuelles' AS 'table' FROM Aktuelles " +
                        "UNION " +
                         "SELECT Time, Title, 'Belehrungen' AS 'table' FROM Belehrungen " +
                        "UNION " +
                         "SELECT Time, Title, 'Dokumente' AS 'table' FROM Dokumente " +
                        "UNION " +
                         "SELECT Time, Title, 'Formulare' AS 'table' FROM Formulare " +
                        "UNION " +
                         "SELECT Time, Title, 'Integrationsberatung' AS 'table' FROM Integrationsberatung " +
                        "UNION " +
                         "SELECT Time, Title, 'Mensa' AS 'table' FROM Mensa " +
                        "UNION " +
                         "SELECT Time, Title, 'Physiotherapie' AS 'table' FROM Physiotherapie " +
                        "UNION " +
                         "SELECT Time, Title, 'PsychologischerDienst' AS 'table' FROM PsychologischerDienst " +
                        "UNION " +
                         "SELECT Time, Title, 'RehaKoordination' AS 'table' FROM RehaKoordination " +
                        "UNION " +
                         "SELECT Time, Title, 'Seelsorge' AS 'table' FROM Seelsorge " +
                        "UNION " +
                         "SELECT Time, Title, 'Stellenboerse' AS 'table' FROM Stellenboerse " +
                        "UNION " +
                         "SELECT Time, Title, 'Teilnehmervertretung' AS 'table' FROM Teilnehmervertretung " +
                        "UNION " +
                         "SELECT Time, Title, 'VamB' AS 'table' FROM VamB " +
                        "UNION " +
                         "SELECT Time, Title, 'Wohnheim' AS 'table' FROM Wohnheim " +
                        "UNION " +
                         "SELECT Time, Title, 'Allgemeines' AS 'table' FROM Allgemeines " +
                         "ORDER BY Time DESC";

                    int y = 0;
                    foreach (var row in db.Query(selectQueryString))
                    {
                        y++;
                        if (y <= 4)
                        {

                            <a href="\@row.table\index" style="color:black; font-size:21px">
                                <div class="well" style="line-height: 21px">
                                    <div class="row">
                                        <div class="col-xs-8">
                                            <b><p class="text-left">@row.Title</p></b>
                                        </div>
                                        <div class="col-xs-4">
                                            <p style="font-size:small" class="text-right">@row.Time</p>
                                        </div>
                                    </div>
                                </div>
                            </a>

                        }
                    }



                }
            </div>

        </div>


        <div class="col-md-6">

            <div class="row">

                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <div id="myCarousel" class="carousel slide" data-interval="false">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            @{
                                    string[] allPaths = new string[Directory.GetDirectories(Server.MapPath("~/Data/Speiseplan/Bilder")).Length];
                                if (allPaths.Length != 0)
                                {
                                    allPaths = Directory.GetDirectories(Server.MapPath("~/Data/Speiseplan/Bilder"));
                                    <div class="item active">
                                        @{
                                            Uri absUri = new Uri(allPaths[0] + "/Folie1.PNG");
                                            Uri reference = new Uri(Server.MapPath("~/Data"));
                                            string relPath = "/" + reference.MakeRelativeUri(absUri).ToString();
                                        }
                                        <a href=@relPath><img src=@relPath style="width: 100%"></a>
                                    </div>
                                            for (int i = 1; i < allPaths.Length; i++)
                                            {
                                                <div class="item">
                                                    @{
                                                        absUri = new Uri(allPaths[i] + "/Folie1.PNG");
                                                        reference = new Uri(Server.MapPath("~/Data"));
                                                        relPath = "/" + reference.MakeRelativeUri(absUri).ToString();
                                                    }
                                                    <a href=@relPath><img src=@relPath style="width: 100%"></a>
                                                </div>
                                                            }
                                                        }
                            }
                        </div>
                        <!--
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="~/pictures/Speise.PNG" alt="Tok_KEk" />
                            </div>

                            <div class="item">
                                <img src="~/pictures/Speise.PNG" alt="Tok_KEk" />
                            </div>
                        </div>-->
                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>



                    @*<object data="@Server.UrlPathEncode("/Data/Dokumente/Heimreiseplan_BBW_DD_2018.pdf")" style="width:100%;height: 650px;" class="center-block">Hier sollten Öffnungszeiten sein :(</object>*@




                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </div>

</div>
