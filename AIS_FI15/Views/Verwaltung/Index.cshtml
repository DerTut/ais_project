                            &nbsp;&nbsp;&nbsp;<a href="@Url.Action("Index", "VAmB")" class="@kundenserviceUnterpunkt" role="button">VAmB</a>
                            <br />
                        </div>
                    </div>
                    <br />
                    <a href="@Url.Action("Index", "Seelsorge")" class="@seelsorge" role="button">Seelsorge</a>
                    <br /><br />
                    <a href="@Url.Action("Index", "Wohnheim")" class="@wohnheim" role="button">Wohnheim</a>
                    <br /><br />
                    <a href="@Url.Action("Index", "Teilnehmervertretung")" class="@teilnehmervertretung" role="button">Teilnehmervertretung</a>
                    <div class="col-sm-3"></div>
                </div>

                </div>

    </div>

    <div class="col-sm-3"></div>

</div>



