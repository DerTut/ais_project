@{
    ViewBag.Title = "Verwaltung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<br />
<br />
<br />

@{
    string mensa = "btn btn-success disabled btn-block",
            teilnehmervertretung = "btn btn-success disabled btn-block",
            aerztlicherDienst = "btn btn-success disabled btn-block",
            physiotherapie = "btn btn-success disabled btn-block",
            psychologischerdienst = "btn btn-success disabled btn-block",            
            kundenservice = "btn btn-success disabled btn-block",
            seelsorge = "btn btn-success disabled btn-block",
            wohnheim = "btn btn-success disabled btn-block";

    string kundenserviceUnterpunkt = "btn btn-success active btn-block hidden";
}

@if (Request.IsAuthenticated && HttpContext.Current.User.Identity.Name == "Mensa")
{
    mensa = "btn btn-success active btn-block";
}
else if (Request.IsAuthenticated && HttpContext.Current.User.Identity.Name == "Teilnehmervertretung")
{
    teilnehmervertretung = "btn btn-success active btn-block";
}
else if (Request.IsAuthenticated && HttpContext.Current.User.Identity.Name == "ÄrztlicherDienst")
{
    aerztlicherDienst = "btn btn-success active btn-block";
}
else if (Request.IsAuthenticated && HttpContext.Current.User.Identity.Name == "Physiotherapie")
{
    physiotherapie = "btn btn-success active btn-block";
}
else if (Request.IsAuthenticated && HttpContext.Current.User.Identity.Name == "PsychologischerDienst")
{
    psychologischerdienst = "btn btn-success active btn-block";
}
else if (Request.IsAuthenticated && HttpContext.Current.User.Identity.Name == "Kundenservice")
{
    kundenservice = "btn btn-success active btn-block";
    kundenserviceUnterpunkt = "btn btn-success active btn-block";
}
else if (Request.IsAuthenticated && HttpContext.Current.User.Identity.Name == "Seelsorge")
{
    seelsorge = "btn btn-success active btn-block";
}
else if (Request.IsAuthenticated && HttpContext.Current.User.Identity.Name == "Wohnheim")
{
    wohnheim = "btn btn-success active btn-block";
}
else if (Request.IsAuthenticated && (HttpContext.Current.User.Identity.Name == "Root"))
{
    mensa = "btn btn-success active btn-block";
    teilnehmervertretung = "btn btn-success active btn-block";
    aerztlicherDienst = "btn btn-success active btn-block";
    physiotherapie = "btn btn-success active btn-block";
    psychologischerdienst = "btn btn-success active btn-block";
    kundenservice = "btn btn-success active btn-block";
    kundenserviceUnterpunkt = "btn btn-success active btn-block";
    wohnheim = "btn btn-success active btn-block";
    seelsorge = "btn btn-success active btn-block";

}



<div class="row">

    <div class="col-sm-3"></div>

    <div class="col-sm-6">

       <h4> Hier haben Sie die Übersicht, welche Seiten Sie als <b>@HttpContext.Current.User.Identity.Name</b> bearbeiten dürfen: </h4>
        

        <div class="well well-lg">

            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <a href="@Url.Action("Index", "Mensa")" class="@mensa" role="button">Mensa</a>
                    <br /><br />
                    <a href="@Url.Action("Index", "aerztlicherDienst")" class="@aerztlicherDienst" role="button">Ärztlicher Dienst</a>
                    <br /><br />
                    <a href="@Url.Action("Index", "Physiotherapie")" class="@physiotherapie" role="button">Physiotherapie</a>
                    <br /><br />
                    <a href="@Url.Action("Index", "PsychologischerDienst")" class="@psychologischerdienst" role="button">Psychologischer Dienst</a>
                    <br /><br />                   
                    <a href="#" class="@kundenservice" role="button">Kundenservice</a>
                    <div class="row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-2"></div>
                        <div class="col-sm-8">
                            &nbsp;&nbsp;&nbsp;<a href="@Url.Action("Index", "Allgemeines")" class="@kundenserviceUnterpunkt" role="button">Allgemeines</a>                            
